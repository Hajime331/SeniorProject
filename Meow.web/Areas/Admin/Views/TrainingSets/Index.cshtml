@model List<Meow.Shared.Dtos.TrainingSets.TrainingSetListItemDto>
@{
    ViewData["Title"] = "Training Sets";
}
<h2 class="mb-3">Training Sets</h2>

<div class="d-flex justify-content-between align-items-center mb-3">
    <form class="d-flex gap-2" method="get">
        <input class="form-control" type="text" name="keyword" placeholder="關鍵字 (Name)" value="@Context.Request.Query["keyword"]" />
        <select class="form-select" name="status">
            <option value="">全部狀態</option>
            <option value="Active" selected="@(Context.Request.Query["status"] == "Active")">Active</option>
            <option value="Archived" selected="@(Context.Request.Query["status"] == "Archived")">Archived</option>
        </select>
        <button class="btn btn-primary" type="submit">查詢</button>
    </form>
    <a class="btn btn-success" asp-area="Admin" asp-controller="TrainingSets" asp-action="Create">＋ 新增課表</a>
</div>

@if (Model is null || Model.Count == 0)
{
    <div class="alert alert-info">目前沒有資料。</div>
}
else
{
    <table class="table table-hover align-middle">
        <thead>
            <tr>
                <th>名稱</th>
                <th>部位</th>
                <th>器材</th>
                <th>難度</th>
                <th>估計秒數</th>
                <th>項目數</th>
                <th>操作</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var s in Model)
            {
                <tr>
                    <td>@s.Name</td>
                    <td>@s.BodyPart</td>
                    <td>@s.Equipment</td>
                    <td>@s.Difficulty</td>
                    <td>@s.EstimatedDurationSec</td>
                    <td>@s.ItemCount</td>
                    <td class="d-flex gap-2">
                        <a class="btn btn-sm btn-outline-primary"
                           asp-area="Admin" asp-controller="TrainingSets" asp-action="Edit" asp-route-id="@s.SetId">編輯</a>

                        <form asp-area="Admin" asp-controller="TrainingSets" asp-action="Delete" method="post"
                              onsubmit="return confirm('刪除後無法復原，確定刪除？');">
                            <input type="hidden" name="id" value="@s.SetId" />
                            <button class="btn btn-sm btn-outline-danger" type="submit">刪除</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
