@{
    ViewData["Title"] = "後台首頁";
}

<h2 class="mb-4">後台管理</h2>

@if (TempData["Ok"] is string ok && !string.IsNullOrWhiteSpace(ok))
{
    <div class="alert alert-success">@ok</div>
}
@if (TempData["Error"] is string err && !string.IsNullOrWhiteSpace(err))
{
    <div class="alert alert-danger">@err</div>
}
<a class="nav-link" asp-area="Admin" asp-controller="Home" asp-action="Index">管理後台</a>
<div class="row row-cols-1 row-cols-md-3 g-4">
    <div class="col">
        <div class="card h-100 shadow-sm">
            <div class="card-body">
                <h5 class="card-title">標籤管理</h5>
                <p class="card-text text-muted">新增、修改、刪除標籤；支援關鍵字搜尋與分類</p>
                <a class="btn btn-primary" asp-area="Admin" asp-controller="Tags" asp-action="Index">前往</a>
            </div>
        </div>
    </div>

    <div class="col">
        <div class="card h-100 shadow-sm">
            <div class="card-body">
                <h5 class="card-title">影片管理</h5>
                <p class="card-text text-muted">建立/編輯/下架影片、維護縮圖與標籤</p>
                <a class="btn btn-primary" asp-area="Admin" asp-controller="TrainingVideos" asp-action="Index">前往</a>
            </div>
        </div>
    </div>

    <div class="col">
        <div class="card h-100 shadow-sm">
            <div class="card-body">
                <h5 class="card-title">課表管理</h5>
                <p class="card-text text-muted">建立/編輯/封存課表。</p>
                <a class="btn btn-primary" asp-area="Admin" asp-controller="TrainingSets" asp-action="Index">前往</a>
            </div>
        </div>
    </div>
</div>
