@{
    ViewData["Title"] = "後台";
}

<h2 class="mb-3">後台首頁</h2>

<div class="row g-3">
    <div class="col-md-4">
        <a class="text-decoration-none" asp-area="Admin" asp-controller="TrainingSets" asp-action="Index">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">課表管理</h5>
                    <p class="card-text text-muted">建立 / 編輯 / 刪除 Training Sets（含項目、標籤）</p>
                </div>
                <div class="card-footer bg-transparent border-0 text-primary">前往</div>
            </div>
        </a>
    </div>

    <div class="col-md-4">
        <a class="text-decoration-none" asp-area="Admin" asp-controller="TrainingVideos" asp-action="Index">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">影片管理</h5>
                    <p class="card-text text-muted">建立 / 編輯 / 刪除 Training Videos（含標籤、狀態）</p>
                </div>
                <div class="card-footer bg-transparent border-0 text-primary">前往</div>
            </div>
        </a>
    </div>

    <div class="col-md-4">
        <a class="text-decoration-none" asp-area="Admin" asp-controller="Tags" asp-action="Index">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">標籤管理</h5>
                    <p class="card-text text-muted">新增 / 編輯 / 停用 標籤項目</p>
                </div>
                <div class="card-footer bg-transparent border-0 text-primary">前往</div>
            </div>
        </a>
    </div>
</div>
