@model Meow.Shared.Dtos.Videos.TrainingVideoDetailDto
@{
    ViewData["Title"] = "影片內容（後台）";
    string Minutes(int? sec) => sec.HasValue ? $"{Math.Round(sec.Value / 60.0)} 分" : "—";
}

<div class="container my-4 mb-5">
    <h3 class="mb-3">@Model.Title</h3>

    <div class="card shadow-sm">
        @if (!string.IsNullOrWhiteSpace(Model.ThumbnailUrl))
        {
            <div class="card-img-top rounded-top" style="height:240px;background:#f2f3f5 url('@Model.ThumbnailUrl') center/cover no-repeat;"></div>
        }
        else
        {
            <div class="card-img-top rounded-top" style="height:240px;background:#f2f3f5;"></div>
        }

        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">部位</dt>
                <dd class="col-sm-9">@Model.BodyPart</dd>

                <dt class="col-sm-3">影片長度</dt>
                <dd class="col-sm-9">@Minutes(Model.DurationSec)</dd>
            </dl>

            <div class="d-flex gap-2">
                <a asp-action="Index" class="btn btn-secondary">回列表</a>
                <a asp-action="Edit" asp-route-id="@Model.VideoId" class="btn btn-primary">編輯</a>
            </div>
        </div>
    </div>
</div>
