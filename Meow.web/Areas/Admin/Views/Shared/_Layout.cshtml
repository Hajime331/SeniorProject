<!doctype html>
<html lang="zh-Hant">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>後台｜@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body class="bg-light">
    <nav class="navbar navbar-expand navbar-dark bg-dark">
        <div class="container-fluid">
            <!-- 連到後台首頁 -->
            <a class="navbar-brand" asp-area="Admin" asp-controller="Home" asp-action="Index">Admin</a>

            <div class="navbar-nav">
                <!-- 後台儀表板 -->
                <a class="nav-link" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">儀表板</a>

                <!-- 熱門訓練組合排行 -->
                <a class="nav-link" asp-area="Admin" asp-controller="Dashboard" asp-action="PopularSets">熱門訓練組合排行</a>

                <!-- 回前台（首頁） -->
                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">回前台</a>
                
            </div>
            <div class="navbar-nav ms-auto">
                <span class="navbar-text me-3">@User.Identity?.Name</span>
                <form asp-area="" asp-controller="Auth" asp-action="Logout" method="post" class="d-inline">
                    <button type="submit" class="btn btn-sm btn-outline-light">登出</button>
                </form>
            </div>
        </div>
    </nav>
    <main class="container my-4">
        @RenderBody()
    </main>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>