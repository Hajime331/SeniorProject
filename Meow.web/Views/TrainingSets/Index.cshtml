@using System.Collections.Generic
@model Meow.Web.ViewModels.TrainingSets.TrainingSetIndexVm
@{
    ViewData["Title"] = "課表列表";
    string MinutesText(int? sec) => sec.HasValue ? $"{Math.Round(sec.Value / 60.0)} 分" : "—";
    var allDifficulties = Model.AllDifficulties ?? new List<string> { "初階", "進階", "高階" };
}

<div class="container my-4 mb-5">
    <div class="row g-3">
        <aside class="col-12 col-lg-3">
            <div class="card shadow-sm position-sticky" style="top: 1.5rem;">
                <div class="card-body">
                    <h5 class="card-title mb-3">搜尋課表</h5>
                    <form method="get" class="d-grid gap-3">
                        <div>
                            <label class="form-label mb-1" for="keyword">關鍵字</label>
                            <input id="keyword"
                                   name="keyword"
                                   class="form-control"
                                   value="@Model.Keyword"
                                   placeholder="課表名稱" />
                        </div>

                        <div>
                            <label class="form-label mb-1" for="difficulty">難度</label>
                            <select id="difficulty" name="difficulty" class="form-select">
                                <option value="">不限</option>
                                @foreach (var d in allDifficulties)
                                {
                                    <option value="@d" selected="@(Model.Difficulty == d ? "selected" : null)">@d</option>
                                }
                            </select>
                        </div>

                        <div>
                            <label class="form-label mb-1" for="tagId">標籤</label>
                            <select id="tagId" name="tagId" class="form-select">
                                <option value="">不限</option>
                                @foreach (var tag in Model.AllTags)
                                {
                                    var selected = Model.TagId.HasValue && Model.TagId.Value == tag.TagId ? "selected" : null;
                                    <option value="@tag.TagId" selected="@selected">@tag.Name</option>
                                }
                            </select>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">搜尋</button>
                            <a asp-action="Index" class="btn btn-outline-secondary">清除條件</a>
                        </div>
                    </form>
                </div>
            </div>
        </aside>

        <section class="col-12 col-lg-9">
            @if (Model.Sets == null || !Model.Sets.Any())
            {
                <div class="alert alert-warning">目前沒有符合條件的課表。</div>
            }
            else
            {
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <h4 class="text-muted">@Model.Sets.Count 個課表</h4>
                </div>

                <div class="row row-cols-1 row-cols-md-3 g-3">
                    @foreach (var set in Model.Sets)
                    {
                        <div class="col">
                            <div class="card h-100 shadow-sm">
                                @if (!string.IsNullOrWhiteSpace(set.CoverUrl))
                                {
                                    <div class="card-img-top rounded-top"
                                         style="height:180px;background:#f2f3f5 url('@set.CoverUrl') center/cover no-repeat;"></div>
                                }
                                else
                                {
                                    <div class="card-img-top rounded-top"
                                         style="height:180px;background:#f2f3f5;"
                                         aria-hidden="true"></div>
                                }

                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title text-truncate" title="@set.Name">@set.Name</h5>
                                    <div class="text-muted small mb-3">
                                        難度：@(string.IsNullOrWhiteSpace(set.Difficulty) ? "—" : set.Difficulty)
                                        @if (set.EstimatedDurationSec.HasValue)
                                        {
                                            <span class="ms-2">時間：@MinutesText(set.EstimatedDurationSec)</span>
                                        }
                                    </div>
                                    <div class="mt-auto d-flex flex-wrap gap-2">
                                        <a asp-action="Details" asp-route-id="@set.SetId" class="btn btn-sm btn-outline-primary">查看</a>
                                        <form asp-controller="TrainingSessions" asp-action="Start" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="setId" value="@set.SetId" />
                                            <button type="submit" class="btn btn-sm btn-primary">開始訓練</button>
                                        </form>



                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </section>
    </div>
</div>
