@model Meow.Web.ViewModels.TrainingSets.TrainingSetIndexVm
@{
    ViewData["Title"] = "課表清單";
}

<h2 class="mb-3">課表清單</h2>

<form method="get" class="row g-2 mb-3">
    <div class="col-auto">
        <input type="text" name="keyword" class="form-control"
               placeholder="搜尋課表名稱..."
               value="@Model.Keyword" />
    </div>
    <div class="col-auto">
        <button class="btn btn-outline-primary" type="submit">搜尋</button>
    </div>
</form>

@if (Model.Sets?.Any() == true)
{
    <div class="list-group">
        @foreach (var s in Model.Sets)
        {
            <div class="list-group-item d-flex justify-content-between align-items-center">
                <div>
                    <div class="fw-bold">@s.Name</div>
                    <div class="small text-muted">
                        @s.BodyPart · @s.Equipment
                        @if (s.Difficulty is not null)
                        {
                            <span> · 難度：@s.Difficulty</span>
                        }
                        <span> · 項目數：@s.ItemCount</span>
                    </div>
                </div>
                <div>
                    <form asp-action="Start" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@s.SetID" />
                        <button class="btn btn-sm btn-primary" type="submit">以此課表開始訓練</button>
                    </form>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="text-muted">目前沒有課表。</div>
}
