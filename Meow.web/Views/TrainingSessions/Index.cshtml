@model TrainingSessionIndexVm
@{
    ViewData["Title"] = "訓練紀錄";

    string? FormatDate(DateTime? d) => d?.ToString("yyyy-MM-dd");

    int pageSize = Model.Result?.PageSize ?? 20;

    string BuildPageUrl(int targetPage) => Url.Action("Index", new
    {
        from = FormatDate(Model.From),
        to = FormatDate(Model.To),
        page = targetPage,
        pageSize,
        tagId = Model.TagId?.ToString()
    }) ?? "#";
}

<div class="container my-4">
    <div class="row g-3">
        <aside class="col-12 col-lg-3">
            <div class="card shadow-sm position-sticky" style="top: 1.5rem;">
                <div class="card-body">
                    <h5 class="card-title mb-3">搜尋條件</h5>
                    <form method="get" class="d-grid gap-3">
                        <div>
                            <label class="form-label mb-1">起始日期</label>
                            <input type="date" name="from" class="form-control" value="@FormatDate(Model.From)" />
                        </div>
                        <div>
                            <label class="form-label mb-1">結束日期</label>
                            <input type="date" name="to" class="form-control" value="@FormatDate(Model.To)" />
                        </div>
                        <div>
                            <label class="form-label mb-1" for="tagId">標籤</label>
                            <select id="tagId" name="tagId" class="form-select">
                                <option value="">不限</option>
                                @foreach (var tag in Model.AllTags)
                                {
                                    var selected = Model.TagId.HasValue && Model.TagId.Value == tag.TagID ? "selected" : null;
                                    <option value="@tag.TagID" selected="@selected">@tag.Name</option>
                                }
                            </select>


                        </div>
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">搜尋</button>
                            <a class="btn btn-outline-secondary" asp-action="Index">清除條件</a>
                        </div>
                    </form>
                </div>
            </div>
        </aside>

        <section class="col-12 col-lg-9">
            <h2 class="mb-3">訓練紀錄</h2>

            @if (!(Model.Result?.Items?.Any() ?? false))
            {
                <div class="alert alert-light border text-muted">目前沒有符合條件的訓練紀錄。</div>
            }
            else
            {
                <div class="d-flex justify-content-between align-items-center flex-wrap gap-2 mb-3">
                    <div class="text-muted">共 @Model.Result!.TotalCount 筆紀錄</div>
                    <div class="d-flex align-items-center gap-2">
                        <a class="btn btn-outline-secondary btn-sm @(Model.Result!.HasPreviousPage ? "" : "disabled")"
                           href="@(Model.Result!.HasPreviousPage ? BuildPageUrl(Model.Result.PageIndex - 1) : "#")">上一頁</a>
                        <span class="small text-nowrap">第 @Model.Result.PageIndex / @Model.Result.TotalPages 頁</span>
                        <a class="btn btn-outline-secondary btn-sm @(Model.Result!.HasNextPage ? "" : "disabled")"
                           href="@(Model.Result!.HasNextPage ? BuildPageUrl(Model.Result.PageIndex + 1) : "#")">下一頁</a>
                    </div>
                </div>

                <div class="list-group">
                    @foreach (var s in Model.Result!.Items)
                    {
                        <div class="list-group-item list-group-item-action">
                            <div class="d-flex flex-column flex-md-row justify-content-between gap-3">
                                <div class="me-md-3">
                                    <div class="fw-semibold">
                                        @s.StartedAt.ToLocalTime().ToString("yyyy/MM/dd HH:mm")
                                        <span class="text-muted ms-2">· @s.SetName</span>
                                    </div>

                                    @if (s.TagNames?.Any() == true)
                                    {
                                        <div class="mt-2 d-flex flex-wrap gap-2">
                                            @foreach (var name in s.TagNames)
                                            {
                                                <span class="badge rounded-pill text-bg-secondary">@name</span>
                                            }
                                        </div>
                                    }

                                    @if (!string.IsNullOrWhiteSpace(s.Notes))
                                    {
                                        <div class="small text-muted mt-2">備註：@s.Notes</div>
                                    }
                                </div>

                                <div class="text-md-end">
                                    @if (s.CompletedFlag || s.EndedAt.HasValue)
                                    {
                                        <span class="badge text-bg-success">已完成</span>
                                        <div class="mt-2">
                                            <a class="btn btn-sm btn-outline-primary" asp-action="Detail" asp-route-id="@s.SessionID">查看</a>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="mt-2 d-flex flex-wrap gap-2 justify-content-md-end">
                                            <a class="btn btn-sm btn-outline-warning" asp-action="InProgress" asp-route-id="@s.SessionID">進行中</a>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <div class="d-flex justify-content-between align-items-center flex-wrap gap-2 mt-3">
                    <div class="text-muted small">每頁 @Model.Result!.PageSize 筆</div>
                    <div class="d-flex align-items-center gap-2">
                        <a class="btn btn-outline-secondary btn-sm @(Model.Result!.HasPreviousPage ? "" : "disabled")"
                           href="@(Model.Result!.HasPreviousPage ? BuildPageUrl(Model.Result.PageIndex - 1) : "#")">上一頁</a>
                        <a class="btn btn-outline-secondary btn-sm @(Model.Result!.HasNextPage ? "" : "disabled")"
                           href="@(Model.Result!.HasNextPage ? BuildPageUrl(Model.Result.PageIndex + 1) : "#")">下一頁</a>
                    </div>
                </div>
            }
        </section>

    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

