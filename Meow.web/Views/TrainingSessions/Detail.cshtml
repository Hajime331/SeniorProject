@model Meow.Shared.Dtos.TrainingSessions.TrainingSessionDetailDto
@{
    ViewData["Title"] = "訓練明細";
    var cover = ViewBag.SetCoverUrl as string;
}

<div class="container py-3">
    <div class="card shadow-sm">
        <div class="card-header d-flex align-items-center justify-content-between">
            <div>
                <h4 class="mb-0">@Model.SetName</h4>
                <small class="text-muted">開始時間：@Model.StartedAt.ToLocalTime()</small>
                @if (Model.EndedAt.HasValue)
                {
                    <div><small class="text-success">完成時間：@Model.EndedAt.Value.ToLocalTime()</small></div>
                }
            </div>
            <a asp-action="Index" class="btn btn-outline-secondary">回列表</a>
        </div>

        @if (!string.IsNullOrWhiteSpace(cover))
        {
            <div style="height:220px;background:#f2f3f5 url('@cover') center/cover no-repeat;
                            border-top-left-radius:.5rem;border-top-right-radius:.5rem;"></div>
        }

        <div class="card-body">
            <h5 class="mb-3">訓練步驟</h5>

            <ol class="list-group list-group-numbered">
                @foreach (var item in Model.Items.OrderBy(x => x.OrderNo))
                {
                    <li class="list-group-item">
                        <div class="d-flex justify-content-between">
                            <div>
                                <div class="fw-semibold">@item.VideoTitle</div>
                                <div class="small text-muted">
                                    次數：@item.ActualReps?.ToString() 次
                                    ，重量：@item.ActualWeight?.ToString() Kg
                                    ，時長：@item.ActualDurationSec?.ToString() 秒
                                    ，休息：@item.ActualRestSec?.ToString() 秒
                                    ，回合：@item.RoundsDone?.ToString()
                                </div>
                            </div>
                            <button class="btn btn-sm btn-outline-primary"
                                    type="button"
                                    data-bs-toggle="collapse"
                                    data-bs-target="#edit-@item.SessionItemID">
                                編輯
                            </button>
                        </div>

                        <div class="collapse mt-2" id="edit-@item.SessionItemID">
                            <form asp-action="UpdateItem" asp-controller="TrainingSessions" method="post" class="row g-2">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="SessionID" value="@Model.SessionID" />
                                <input type="hidden" name="SessionItemID" value="@item.SessionItemID" />

                                <div class="col-6 col-md-2">
                                    <label class="form-label">狀態</label>
                                    <select name="Status" class="form-select">
                                        <option value="Done" selected="@(item.Status == "Done" ? "selected" : null)">完成</option>
                                        <option value="Partial" selected="@(item.Status == "Partial" ? "selected" : null)">部分</option>
                                        <option value="Skipped" selected="@(item.Status == "Skipped" ? "selected" : null)">略過</option>
                                    </select>
                                </div>
                                <div class="col-6 col-md-2">
                                    <label class="form-label">次數</label>
                                    <input type="number" name="ActualReps" class="form-control" value="@item.ActualReps" />
                                </div>
                                <div class="col-6 col-md-2">
                                    <label class="form-label">重量</label>
                                    <input type="number" name="ActualWeight" class="form-control" value="@item.ActualWeight" />
                                </div>
                                <div class="col-6 col-md-2">
                                    <label class="form-label">時長(秒)</label>
                                    <input type="number" name="ActualDurationSec" class="form-control" value="@item.ActualDurationSec" />
                                </div>
                                <div class="col-6 col-md-2">
                                    <label class="form-label">休息(秒)</label>
                                    <input type="number" name="ActualRestSec" class="form-control" value="@item.ActualRestSec" />
                                </div>
                                <div class="col-6 col-md-2">
                                    <label class="form-label">回合</label>
                                    <input type="number" name="RoundsDone" class="form-control" value="@item.RoundsDone" />
                                </div>
                                <div class="col-12">
                                    <label class="form-label">備註</label>
                                    <input type="text" name="Note" class="form-control" value="@item.Note" />
                                </div>
                                <div class="col-12">
                                    <button class="btn btn-primary btn-sm" type="submit">儲存</button>
                                </div>
                            </form>
                        </div>
                    </li>
                }
            </ol>
        </div>
    </div>
</div>
