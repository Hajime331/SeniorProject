@using Meow.Shared.Dtos.Accounts
@model IEnumerable<MemberDto>

@{
    ViewData["Title"] = "會員清單";
}

<h2 class="mb-3">會員清單</h2>
<p>
    <a class="btn btn-primary" asp-controller="Members" asp-action="Create">新增會員</a>
</p>


@*清單頁顯示成功訊息*@
@if (TempData["Success"] is string ok && !string.IsNullOrWhiteSpace(ok))
{
    <div class="alert alert-success" role="alert">
        @ok
    </div>
}

<table class="table table-striped table-bordered align-middle">
    <thead>
        <tr>
            <th>Nickname</th>
            <th>Email</th>
            <th>Status</th>
            <th>IsAdmin</th>
            <th>CreatedAt</th>
            <th>LastLoginAt</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var m in Model)
        {
            <tr>
                <td>@m.Nickname</td>
                <td>@m.Email</td>
                <td>@m.Status</td>
                <td>@(m.IsAdmin ? "Yes" : "No")</td>
                <td>@m.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@(m.LastLoginAt?.ToString("yyyy-MM-dd HH:mm") ?? "-")</td>
            </tr>
        }
    </tbody>
</table>
