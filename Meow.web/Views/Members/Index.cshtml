@model IEnumerable<Meow.Web.Models.MemberDto>

@{
    ViewData["Title"] = "會員清單";
}

<h2 class="mb-3">會員清單</h2>

<table class="table table-striped table-bordered align-middle">
    <thead>
        <tr>
            <th>Nickname</th>
            <th>Email</th>
            <th>Status</th>
            <th>IsAdmin</th>
            <th>CreatedAt</th>
            <th>LastLoginAt</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var m in Model)
        {
            <tr>
                <td>@m.Nickname</td>
                <td>@m.Email</td>
                <td>@m.Status</td>
                <td>@(m.IsAdmin ? "Yes" : "No")</td>
                <td>@m.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@(m.LastLoginAt?.ToString("yyyy-MM-dd HH:mm") ?? "-")</td>
            </tr>
        }
    </tbody>
</table>
