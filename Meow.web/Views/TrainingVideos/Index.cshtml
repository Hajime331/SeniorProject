@model Meow.Web.ViewModels.TrainingVideos.TrainingVideoIndexVm
@{
    ViewData["Title"] = "訓練影片";
    string Minutes(int? sec) => sec.HasValue ? $"{Math.Round(sec.Value / 60.0)} 分" : "-";
    var selectedTagId = Model.SelectedTagIds?.FirstOrDefault();
}

<div class="container my-4 mb-5">
    <div class="row g-3">
        <aside class="col-12 col-lg-3">
            <div class="card shadow-sm position-sticky" style="top: 1.5rem;">
                <div class="card-body">
                    <h5 class="card-title mb-3">搜尋條件</h5>
                    <form method="get" class="d-grid gap-3">
                        <div>
                            <label class="form-label mb-1" for="keyword">關鍵字</label>
                            <input id="keyword"
                                   name="keyword"
                                   class="form-control"
                                   value="@Model.Keyword"
                                   placeholder="影片名稱" />
                        </div>

                        <div>
                            <label class="form-label mb-1" for="tagId">標籤</label>
                            <select id="tagId" name="tagId" class="form-select">
                                <option value="">全部</option>
                                @foreach (var t in Model.AllTags)
                                {
                                    var isSelected = selectedTagId.HasValue && selectedTagId.Value == t.TagId;
                                    <option value="@t.TagId" selected="@(isSelected ? "selected" : null)">@t.Name</option>
                                }
                            </select>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">搜尋</button>
                            <a asp-action="Index" class="btn btn-outline-secondary">清除條件</a>
                        </div>
                    </form>
                </div>
            </div>
        </aside>

        <section class="col-12 col-lg-9">
            @if (Model.Videos == null || !Model.Videos.Any())
            {
                <div class="alert alert-warning">目前沒有符合條件的影片。</div>
            }
            else
            {
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <h4 class="text-muted">@Model.Videos.Count 部影片</h4>
                </div>

                <div class="row row-cols-1 row-cols-md-3 g-3">
                    @foreach (var v in Model.Videos)
                    {
                        <div class="col">
                            <div class="card h-100 shadow-sm">
                                @if (!string.IsNullOrWhiteSpace(v.ThumbnailUrl))
                                {
                                    <div class="card-img-top rounded-top"
                                         style="height:160px;background:#f2f3f5 url('@v.ThumbnailUrl') center/cover no-repeat;"></div>
                                }
                                else
                                {
                                    <div class="card-img-top rounded-top"
                                         style="height:160px;background:#f2f3f5;"
                                         aria-hidden="true"></div>
                                }

                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title text-truncate" title="@v.Title">@v.Title</h5>
                                    <div class="text-muted small mb-3">
                                        時長：@Minutes(v.DurationSec)
                                        @if (!string.IsNullOrWhiteSpace(v.BodyPart))
                                        {
                                            <span class="ms-2">部位：@v.BodyPart</span>
                                        }
                                    </div>
                                    <div class="mt-auto d-flex gap-2">
                                        <a asp-action="Details" asp-route-id="@v.VideoId" class="btn btn-sm btn-outline-secondary">觀看</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </section>
    </div>
</div>
